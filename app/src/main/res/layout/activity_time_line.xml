<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent"
    >
        <LinearLayout
                android:layout_width="331dp"
                android:layout_height="52dp" android:layout_alignParentTop="true"
                android:layout_marginTop="0dp" android:layout_centerHorizontal="true"
        >
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="58dp"
                android:scrollbars="vertical"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>